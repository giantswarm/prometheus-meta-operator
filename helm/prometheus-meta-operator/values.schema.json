{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "alertmanager": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "imageRepository": {
                    "type": "string"
                },
                "logLevel": {
                    "type": "string"
                },
                "slack": {
                    "type": "object",
                    "properties": {
                        "apiURL": {
                            "type": "string"
                        }
                    }
                },
                "storage": {
                    "type": "object",
                    "properties": {
                        "size": {
                            "type": "string"
                        }
                    }
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "certificate": {
            "type": "object",
            "properties": {
                "monitoring": {
                    "type": "object",
                    "properties": {
                        "crtPem": {
                            "type": "string"
                        },
                        "keyPem": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "ciliumNetworkPolicy": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "podSecurityStandards": {
                    "type": "object",
                    "properties": {
                        "enforced": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "grafana": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "className": {
                    "type": "string"
                },
                "externalDNS": {
                    "type": "boolean"
                }
            }
        },
        "kyvernoPolicyExceptions": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "namespace": {
                    "type": "string"
                }
            }
        },
        "managementCluster": {
            "type": "object",
            "properties": {
                "customer": {
                    "type": "string"
                },
                "insecureCA": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "pipeline": {
                    "type": "string"
                },
                "provider": {
                    "type": "object",
                    "properties": {
                        "flavor": {
                            "type": "string"
                        },
                        "kind": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "operator": {
            "type": "object",
            "properties": {
                "containerSecurityContext": {
                    "type": "object",
                    "properties": {
                        "allowPrivilegeEscalation": {
                            "type": "boolean"
                        },
                        "capabilities": {
                            "type": "object",
                            "properties": {
                                "drop": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "readOnlyRootFilesystem": {
                            "type": "boolean"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "securityContext": {
                    "type": "object",
                    "properties": {
                        "fsGroup": {
                            "type": "integer"
                        },
                        "runAsGroup": {
                            "type": "integer"
                        },
                        "runAsNonRoot": {
                            "type": "boolean"
                        },
                        "runAsUser": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "prometheus": {
            "type": "object",
            "properties": {
                "additionalScrapeConfigs": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "bastions": {
                    "type": "array"
                },
                "clusterIssuerName": {
                    "type": "string"
                },
                "etcdClientCertificates": {
                    "type": "object",
                    "properties": {
                        "ca": {
                            "type": "string"
                        },
                        "crt": {
                            "type": "string"
                        },
                        "key": {
                            "type": "string"
                        }
                    }
                },
                "evaluationInterval": {
                    "type": "string"
                },
                "heartbeat": {
                    "type": "object",
                    "properties": {
                        "opsgenieKey": {
                            "type": "string"
                        }
                    }
                },
                "host": {
                    "type": "string"
                },
                "imageRepository": {
                    "type": "string"
                },
                "letsencrypt": {
                    "type": "boolean"
                },
                "logLevel": {
                    "type": "string"
                },
                "retention": {
                    "type": "object",
                    "properties": {
                        "duration": {
                            "type": "string"
                        }
                    }
                },
                "scrapeInterval": {
                    "type": "string"
                }
            }
        },
        "registry": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string"
                }
            }
        },
        "security": {
            "type": "object",
            "properties": {
                "restrictAccess": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "subnet": {
                    "type": "object",
                    "properties": {
                        "vpn": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "vaultHost": {
            "type": "string"
        }
    }
}
