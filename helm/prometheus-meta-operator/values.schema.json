{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "alertmanager": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "host": {
                    "type": "string"
                },
                "imageRepository": {
                    "type": "string"
                },
                "logLevel": {
                    "type": "string"
                },
                "storage": {
                    "type": "object",
                    "properties": {
                        "size": {
                            "type": "string"
                        }
                    }
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "certificate": {
            "type": "object",
            "properties": {
                "monitoring": {
                    "type": "object",
                    "properties": {
                        "crtPem": {
                            "type": "string"
                        },
                        "keyPem": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "grafana": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "externalDNS": {
                    "type": "boolean"
                }
            }
        },
        "managementCluster": {
            "type": "object",
            "properties": {
                "customer": {
                    "type": "string"
                },
                "insecureCA": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "pipeline": {
                    "type": "string"
                },
                "provider": {
                    "type": "object",
                    "properties": {
                        "flavor": {
                            "type": "string"
                        },
                        "kind": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "pod": {
            "type": "object",
            "properties": {
                "group": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        }
                    }
                },
                "user": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "prometheus": {
            "type": "object",
            "properties": {
                "additionalScrapeConfigs": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "bastions": {
                    "type": "array"
                },
                "etcdClientCertificates": {
                    "type": "object",
                    "properties": {
                        "ca": {
                            "type": "string"
                        },
                        "crt": {
                            "type": "string"
                        },
                        "key": {
                            "type": "string"
                        }
                    }
                },
                "evaluationInterval": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "imageRepository": {
                    "type": "string"
                },
                "letsencrypt": {
                    "type": "boolean"
                },
                "logLevel": {
                    "type": "string"
                },
                "mayu": {
                    "type": "string"
                },
                "retention": {
                    "type": "object",
                    "properties": {
                        "duration": {
                            "type": "string"
                        }
                    }
                },
                "scrapeInterval": {
                    "type": "string"
                }
            }
        },
        "registry": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string"
                },
                "pullSecret": {
                    "type": "object",
                    "properties": {
                        "dockerConfigJSON": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "security": {
            "type": "object",
            "properties": {
                "restrictAccess": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "subnet": {
                    "type": "object",
                    "properties": {
                        "vpn": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "vaultHost": {
            "type": "string"
        }
    }
}
